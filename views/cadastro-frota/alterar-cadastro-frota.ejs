<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="/css/cadastro/cadastro.css">
<script src="/js/cadastroFrota/alterarFrota.js"></script>

<style>
    .container-frota {
        margin-inline: 25px;
        margin-top: 35px;
    }

   .container-botao {
        margin-top: 10px;
   }
</style>

<% if (frotaAlter.data) { %>
    <% 
        const dataNascimento = new Date(frotaAlter.data); 
        const dia = String(dataNascimento.getDate()).padStart(2, '0'); 
        const mes = String(dataNascimento.getMonth() + 1).padStart(2, '0');
        const ano = dataNascimento.getFullYear();
        frotaAlter.data = `${ano}-${mes}-${dia}`;
    %>
<% } %>

<% if (frotaAlter.data_adiantamento) { %>
    <% 
        const dataNascimento = new Date(frotaAlter.data_adiantamento); 
        const dia = String(dataNascimento.getDate()).padStart(2, '0'); 
        const mes = String(dataNascimento.getMonth() + 1).padStart(2, '0');
        const ano = dataNascimento.getFullYear();
        frotaAlter.data_adiantamento = `${ano}-${mes}-${dia}`;
    %>
<% } %>

<div class="container-frota">
    <form>
        <input type="number" hidden value="<%= usuario.id %>" id="idPerfil" name="idPerfil">

        <input type="number" hidden value="<%= frotaAlter.id %>" id="id" name="id">

        <div class="row">
            <div class="col">
                <label for="" class="form-label" >Data</label>
                <input type="date" class="form-control" id="data" name="data" value="<%= frotaAlter.data %>">
            </div>
            <div class="col">
                <label for="" class="form-label" >Origem</label>
                <input type="text" class="form-control" id="origem" name="origem" value="<%= frotaAlter.origem %>">
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label for="" class="form-label">Destino</label>
                <input type="text" class="form-control" id="destino" name="destino" value="<%= frotaAlter.destino %>">
            </div>

            <div class="col">
                <label for="" class="form-label" >Frete</label>
                <input type="number" class="form-control" id="frete" name="frete" value="<%= frotaAlter.frete %>">
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label for="" class="form-label" >Material</label>
                <input type="text" class="form-control" id="material" name="material" value="<%= frotaAlter.material %>">
            </div>
    
            <div class="col">       
                <label for="" class="form-label">Peso</label>
                <input type="number" class="form-control" id="peso" name="peso" value="<%= frotaAlter.peso %>">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="" class="form-label">Motorista</label>
                <input type="text" class="form-control" id="motorista" name="motorista" value="<%= frotaAlter.motorista %>">
            </div>
    
            <div class="col">
                <label for="" class="form-label" >Transportadora</label>
                <input type="text" class="form-control" id="transportadora" name="transportadora" value="<%= frotaAlter.transportadora %>">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="" class="form-label" >Adiantamento</label>
                <input type="number" class="form-control" id="adiantamento" name="adiantamento" value="<%= frotaAlter.adiantamento %>">
            </div>
    
            <div class="col">
                <label for="" class="form-label" >Data adiantamento</label>
                <input type="date" class="form-control" id="dataAdiantamento" name="dataAdiantamento" value="<%= frotaAlter.data_adiantamento %>">
            </div>
        </div>

        <div class="col container-botao">
            <button type="button" class="btn btn-secondary btn-add">Atualizar frota</button>      
        </div>  
   
    </form>
</div>